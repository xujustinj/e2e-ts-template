{
  "name": "pern-template-server",
  "description": "Template Express server using PostgreSQL",
  "author": {
    "name": "Justin Xu",
    "email": "xu.justin.j@gmail.com",
    "url": "https://www.justinxu.me/"
  },
  "version": "0.0.1",
  "license": "ISC",
  "private": true,
  "scripts": {
    "build": "tsc",
    "migration:create": "npx mikro-orm migration:create",
    "start:dev": "concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "start:prod": "node dist/index.js"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.10",
    "@mikro-orm/core": "^4.5.10",
    "@mikro-orm/postgresql": "^4.5.10",
    "@mikro-orm/reflection": "^4.5.10",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "typescript": "^4.5.4",
    "typescript-monads": "^7.2.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "tsConfigPath": "./tsconfig.json",
    "configPaths": [
      "./src/data-mikro/mikro-orm.config.ts",
      "./dist/data-mikro/mikro-orm.config.js"
    ]
  }
}
